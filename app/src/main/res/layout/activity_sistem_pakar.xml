<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ui.sistempakar.SistemPakarActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:title=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistem Pakar"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_history"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_history_24"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/petunjuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="4dp"
        android:text="Silahkan pilih maksimal 3 gejala!!"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:textSize="20dp"
        android:maxLines="2"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_item_view_recao"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/petunjuk" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <!-- Checkbox untuk gejala -->
            <CheckBox
                android:id="@+id/cbG1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koin tidak terdeteksi"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED tidak menyala"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED merah tidak menyala"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED hijau tidak menyala saat klik insert"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koin acceptor macet"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koin susah kedeteksi"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koin terdeteksi lebih dari 1"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NodeMCU gagal login Mikrotik"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mikrotik tidak terhubung internet"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landingpage tidak muncul"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juanfi setup tidak muncul"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Koin selain 1000 bisa terdeteksi"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah ganti NodeMCU namun sistem tetap trouble"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NodeMCU, LED, dan coinacceptor sering bermasalah"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

            <CheckBox
                android:id="@+id/cbG15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juanfi setup muncul tapi tidak bisa diakses"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/clearcb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bersihkan checkbox"
        android:layout_marginHorizontal="25dp"
        android:padding="5dp"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Prediksi"
        android:id="@+id/btn_prediksi"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/blue"
        app:cornerRadius = "20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clearcb" />

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hasil Diagnosis:"
        android:layout_marginHorizontal="20dp"
        android:padding="5dp"
        android:visibility="gone"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_prediksi"
        app:layout_constraintStart_toStartOf="parent"
         />

    <Button
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/blue"
        android:text="Simpan ke riwayat"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hasil" />
</androidx.constraintlayout.widget.ConstraintLayout>
